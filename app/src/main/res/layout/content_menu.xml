<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.panchito_166.scolarsoftv3.menu"
    android:background="@drawable/asig"
    tools:showIn="@layout/app_bar_menu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_grado"
        android:text="Grado"
        android:padding="40dp"
        android:paddingLeft="60dp"
        android:paddingRight="50dp"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/txt_nombre" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_grupo"
        android:text="Grupo"
        android:layout_marginRight="30dp"
        android:padding="40dp"
        android:paddingLeft="40dp"
        android:paddingRight="50dp"
        android:layout_alignTop="@+id/txt_grado"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ciclo"
        android:id="@+id/txt_ciclo"
        android:paddingTop="20dp"
        android:paddingLeft="70dp"
        android:layout_below="@+id/txt_matricula"
        android:layout_centerHorizontal="true"
        android:paddingRight="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolaridad"
        android:id="@+id/txt_escolaridad"
        android:paddingTop="20dp"
        android:paddingLeft="70dp"
        android:paddingRight="40dp"
        android:layout_below="@+id/txt_ciclo"
        android:layout_alignEnd="@+id/txt_grupo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matricula"
        android:id="@+id/txt_matricula"
        android:paddingLeft="25dp"
        android:paddingRight="80dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignStart="@+id/txt_escolaridad" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matricula:"
        android:id="@+id/textView2"
        android:paddingLeft="75dp"
        android:layout_below="@+id/txt_grado"
        android:layout_alignStart="@+id/textView3"
        android:paddingRight="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grado y Grupo:"
        android:id="@+id/textView3"
        android:padding="40dp"
        android:paddingLeft="35dp"
        android:layout_above="@+id/txt_matricula"
        android:layout_toStartOf="@+id/txt_grado"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolaridad: "
        android:id="@+id/textView6"
        android:paddingTop="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_alignTop="@+id/txt_escolaridad"
        android:layout_toStartOf="@+id/txt_grupo"
        android:layout_marginEnd="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nombre"
        android:id="@+id/txt_nombre"
        android:paddingTop="80dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_above="@+id/txt_grupo"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/x"
        android:paddingTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/views">

        <ImageView
            android:layout_width="164dp"
            android:layout_height="68dp"
            android:id="@+id/imageView4"
            android:layout_gravity="center"
            android:src="@drawable/alumno02" />
    </FrameLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:id="@+id/views"
        android:layout_alignTop="@+id/txt_nombre"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

</RelativeLayout>